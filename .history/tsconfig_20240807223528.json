{
  "compilerOptions": {
    "target": "es2020", // или 'es2022',
    "module": "esnext", // или 'es2020',
    "jsx": "react-jsx", // Указывает поддержку JSX
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@store/*": ["store/*"],
      "@features/*": ["features/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
