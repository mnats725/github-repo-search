{
  "compilerOptions": {
    "target": "es2020", // или 'es2022', 'esnext'
    "module": "es2020", // или 'esnext', 'system', 'node16', 'nodenext'
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@store/*": ["store/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
